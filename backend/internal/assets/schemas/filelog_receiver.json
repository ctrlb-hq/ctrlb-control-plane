{
  "title": "Filelog Receiver Configuration",
  "type": "object",
  "properties": {
    "include": {
      "type": "array",
      "title": "Include File Paths",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": [
        ""
      ]
    },
    "exclude": {
      "type": "array",
      "title": "Exclude File Paths",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "start_at": {
      "type": "string",
      "title": "Start At",
      "enum": [
        "beginning",
        "end"
      ],
      "default": "end",
      "minLength": 1
    },
    "poll_interval": {
      "type": "string",
      "title": "Poll Interval",
      "default": "200ms"
    },
    "fingerprint_size": {
      "type": "integer",
      "title": "Fingerprint Size",
      "default": 100
    },
    "max_log_size": {
      "type": "integer",
      "title": "Max Log Size",
      "default": 0
    },
    "encoding": {
      "type": "string",
      "title": "Encoding",
      "default": "utf-8",
      "minLength": 1
    },
    "operators": {
      "type": "array",
      "title": "Processors",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "title": "Operator Type",
            "minLength": 1
          },
          "id": {
            "type": "string",
            "title": "Operator ID",
            "minLength": 1
          },
          "regex": {
            "type": "string",
            "title": "Regex Pattern"
          },
          "parse_from": {
            "type": "string",
            "title": "Parse From Field"
          }
        },
        "required": [
          "type",
          "id"
        ]
      },
      "default": [
        {
          "type": "",
          "id": "",
          "regex": "",
          "parse_from": ""
        }
      ]
    }
  },
  "required": [
    "include"
  ]
}