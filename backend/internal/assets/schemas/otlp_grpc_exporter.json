{
  "title": "OTLP gRPC Exporter Configuration",
  "type": "object",
  "properties": {
    "endpoint": {
      "type": "string",
      "title": "OTLP Endpoint",
      "default": "",
      "minLength": 1
    },
    "compression": {
      "type": "string",
      "title": "Compression",
      "enum": [
        "none",
        "gzip"
      ],
      "default": "gzip",
      "minLength": 1
    },
    "timeout": {
      "type": "string",
      "title": "Request Timeout",
      "default": "5s",
      "minLength": 1
    },
    "headers": {
      "type": "object",
      "title": "Custom Headers",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "tls": {
      "type": "object",
      "title": "TLS Settings",
      "properties": {
        "insecure": {
          "type": "boolean",
          "default": false
        },
        "ca_file": {
          "type": "string"
        },
        "cert_file": {
          "type": "string"
        },
        "key_file": {
          "type": "string"
        },
        "insecure_skip_verify": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "retry_on_failure": {
      "type": "object",
      "title": "Retry on Failure",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "initial_interval": {
          "type": "string",
          "default": "5s",
          "minLength": 1
        },
        "max_interval": {
          "type": "string",
          "default": "30s",
          "minLength": 1
        },
        "max_elapsed_time": {
          "type": "string",
          "default": "300s",
          "minLength": 1
        }
      }
    },
    "sending_queue": {
      "type": "object",
      "title": "Sending Queue",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "num_consumers": {
          "type": "integer",
          "default": 10
        },
        "queue_size": {
          "type": "integer",
          "default": 5000
        }
      }
    }
  },
  "required": [
    "endpoint"
  ]
}