{
  "title": "Debug Exporter Configuration",
  "type": "object",
  "properties": {
    "verbosity": {
      "type": "string",
      "title": "Verbosity",
      "enum": [
        "normal",
        "detailed"
      ],
      "default": "normal",
      "description": "Level of detail for the output",
      "minLength": 1
    },
    "sampling_initial": {
      "type": "integer",
      "title": "Initial Sampling Rate",
      "default": 2,
      "description": "Number of initial telemetry items to export"
    },
    "sampling_thereafter": {
      "type": "integer",
      "title": "Sampling Thereafter",
      "default": 500,
      "description": "Number of items to skip after each exported one"
    },
    "disable_metric_attributes": {
      "type": "boolean",
      "title": "Disable Metric Attributes",
      "default": false
    },
    "log_level": {
      "type": "string",
      "title": "Log Level",
      "enum": [
        "info",
        "debug",
        "warn",
        "error"
      ],
      "default": "debug",
      "minLength": 1
    },
    "output": {
      "type": "string",
      "title": "Output Destination",
      "enum": [
        "stdout",
        "stderr"
      ],
      "default": "stdout",
      "minLength": 1
    },
    "format": {
      "type": "string",
      "title": "Output Format",
      "enum": [
        "console",
        "json"
      ],
      "default": "console",
      "minLength": 1
    }
  }
}