                  "default": [
                    ""
                  ]
                },
                "allowed_headers": {
                  "type": "array",
                  "title": "Allowed Headers",
                  "items": {
                    "type": "string"
                  },
                  "default": [
                    ""
                  ]
                },
                "allowed_methods": {
                  "type": "array",
                  "title": "Allowed Methods",
                  "items": {
                    "type": "string"
                  },
                  "default": [
                    ""
                  ]
                },
                "exposed_headers": {
                  "type": "array",
                  "title": "Exposed Headers",
                  "items": {
                    "type": "string"
