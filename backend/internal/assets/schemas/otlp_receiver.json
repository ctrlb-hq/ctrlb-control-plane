                },
                "insecure_skip_verify": {
                  "type": "boolean",
                  "title": "Insecure Skip Verify",
                  "default": false
                }
              }
            },
            "max_recv_msg_size_mib": {
              "type": "integer",
              "title": "Max Receive Msg Size (MiB)",
