                "key_file": {
                  "type": "string"
                },
                "ca_file": {
                  "type": "string"
                },
                "insecure": {
                  "type": "boolean",
                  "default": false
                },
                "insecure_skip_verify": {
                  "type": "boolean",
                  "default": false
                }
              }
