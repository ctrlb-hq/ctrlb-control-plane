      "type": "array",
      "title": "Actions",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "title": "Attribute Key"
          },
          "value": {
            "type": [
              "string",
              "number",
              "boolean"
            ],
            "title": "Value"
          },
          "from_attribute": {
            "type": "string",
            "title": "From Attribute"
          },
          "action": {
            "type": "string",
