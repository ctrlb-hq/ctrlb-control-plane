              "insert",
              "update",
              "upsert",
              "delete",
              "hash",
              "extract"
            ],
            "description": "Type of attribute modification to apply"
          }
        },
        "required": [
          "key",
          "action"
        ]
      },
      "default": [
        {
          "key": "",
          "action": "insert"
        }
      ]
    },
    "include": {
      "type": "object",
      "title": "Include Filter",
      "properties": {
        "match_type": {
          "type": "string",
