            "strict",
            "regexp"
          ],
          "default": "strict"
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "key"
            ]
          },
          "default": [
            {
              "key": "",
              "value": ""
            }
          ]
        }
      }
    },
    "exclude": {
      "type": "object",
      "title": "Exclude Filter",
      "properties": {
        "match_type": {
          "type": "string",
          "enum": [
            "strict",
            "regexp"
          ],
          "default": "strict"
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "key"
            ]
          },
          "default": [
            {
              "key": "",
              "value": ""
            }
          ]
        }
      }
    }
  },
  "required": [
    "actions"
  ]
